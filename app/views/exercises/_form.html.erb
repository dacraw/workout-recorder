<%= form_with(model: [@workout, exercise]) do |form| %>
  <% if exercise.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
        <% exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.button type: :submit, class: "btn-primary" do %>
      <% if exercise.new_record? %>
        <span>Create Exercise</span>
        <div>
          <i class="fa-solid fa-square-plus"></i>
          <i class="fa-solid fa-dumbbell"></i>
        </div>
      <% else %>
        <span>Update Exercise</span>
        <div>
          <i class="fa-solid fa-circle-check"></i>
          <i class="fa-solid fa-dumbbell"></i>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
