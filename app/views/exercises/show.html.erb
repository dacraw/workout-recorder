<h1 class="page-header">View Exercise</h1>

<div class="mb-4">
  <%= render 'exercise', workout: @workout, exercise: @exercise %>
</div>

<% if current_user.id == @exercise.user.id %>                                                        
  <div class="inline-flex flex-col">
    <%= render "exercises_edit_link", exercise: @exercise, workout: @workout, show_text: true %>
    <%= render "workouts/workouts_index_link", workout: @workout %>
    <%= render "exercises_destroy_link", workout: @workout, exercise: @exercise, show_text: true %>
  </div>
<% end %>
